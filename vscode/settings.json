// Dependencies:
// - Django Template
// - erlang
// - Python
// - SCSS Intellisense
// - Vagrantfile Support
{
  "editor.detectIndentation": false,
  "editor.fontFamily": "Fira Code Medium",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [120],
  "editor.tabSize": 2,
  "explorer.openEditors.visible": 0,
  "files.autoSave": "off",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    "**/.idea": true,
    "**/.vagrant": true,
    "**/.vscode": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/*.beam": true,
    "**/.sass-cache": true,
    "frontend/dist": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "c:/Users/gokmen/AppData/Local/Programs/Python/Python35-32/Scripts/pylint.exe",
  "python.linting.pylintArgs": [
    "--disable", "E0401,E1101,C0103,C0111",
    "--max-line-length", "119"
  ],
  "window.menuBarVisibility": "toggle",
  "workbench.welcome.enabled": true,
  "workbench.iconTheme": "vs-seti",
  "[python]": {
    "editor.tabSize": 4,
    "editor.detectIndentation": false
  }
}
